{
	"name": "app-angular",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "wireit",
		"demo": "wireit",
		"lint": "wireit",
		"serve": "ws -d dist/app-angular/browser -p 8080 -z",
		"livereload": "livereload dist/app-angular/browser",
		"watch": "npm run build --watch"
	},
	"wireit": {
		"build": {
			"command": "ng build -c development",
			"dependencies": [
				"../../packages/angular:build",
				"lint"
			],
			"files": [
				"src/**",
				"angular.json",
				"tsconfig.json",
				"tsconfig.app.json"
			],
			"output": [
				"dist/**"
			]
		},
		"build:prod": {
			"command": "ng build",
			"dependencies": [
				"../../packages/angular:build:prod"
			],
			"files": [
				"src/**",
				"angular.json",
				"tsconfig.json",
				"tsconfig.app.json"
			],
			"output": [
				"dist/**"
			]
		},
		"lint": {
			"command": "eslint",
			"files": [
				"src/**",
				"angular.json",
				"tsconfig.json",
				"tsconfig.app.json"
			],
			"output": []
		},
		"demo": {
			"command": "run-p livereload watch serve",
			"service": true
		}
	}
}
