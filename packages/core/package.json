{
	"name": "@amadeus-it-group/microfrontends",
	"description": "Amadeus Micro Frontend Toolkit",
	"version": "0.0.1",
	"license": "MIT",
	"homepage": "https://github.com/AmadeusITGroup/microfrontends",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AmadeusITGroup/microfrontends.git"
	},
	"keywords": [
		"micro frontends",
		"mfe",
		"postmessage",
		"message channel"
	],
	"typings": "dist/index.d.ts",
	"main": "dist/index.js",
	"type": "module",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "wireit",
		"build:prod": "wireit",
		"lint": "wireit",
		"test": "wireit",
		"tdd": "jest --watch",
		"watch": "wireit",
		"pack": "npm pack"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"compile",
				"bundle"
			]
		},
		"build:prod": {
			"command": "tsc --project tsconfig.prod.json",
			"output": [
				"dist/**"
			]
		},
		"watch": {
			"command": "npm run build --watch",
			"service": true
		},
		"compile": {
			"command": "tsc --build",
			"clean": "if-file-deleted",
			"files": [
				"src/**/*.*",
				"tsconfig.json"
			],
			"output": [
				"dist/**"
			],
			"dependencies": [
				"lint"
			]
		},
		"bundle": {
			"command": "npx esbuild dist/index.js --bundle --format=esm --outfile=bundle/core.js",
			"clean": "if-file-deleted",
			"files": [
				"dist/**/*.*"
			],
			"output": [
				"bundle/**"
			],
			"dependencies": [
				"compile"
			]
		},
		"test": {
			"command": "jest --coverage",
			"files": [
				"src/**/*.*"
			],
			"output": [
				"coverage/**"
			],
			"dependencies": [
				"lint"
			]
		},
		"lint": {
			"command": "eslint",
			"files": [
				"src/**/*.*"
			],
			"output": []
		}
	},
	"devDependencies": {
		"core-js": "^3.40.0",
		"esbuild": "^0.25.0"
	}
}
