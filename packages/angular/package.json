{
	"name": "@amadeus-it-group/microfrontends-angular",
	"private": true,
	"description": "Amadeus Micro Frontend Toolkit for Angular",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "wireit",
		"build:prod": "wireit",
		"test": "wireit",
		"watch": "wireit",
		"tdd": "ng test --watch",
		"lint": "wireit"
	},
	"wireit": {
		"build:prod": {
			"command": "ng build -c production",
			"files": [
				"lib/**",
				"angular.json",
				"tsconfig.json"
			],
			"output": [
				"dist/**"
			],
			"dependencies": [
				"../core:build"
			]
		},
		"build": {
			"command": "ng build",
			"files": [
				"lib/**",
				"angular.json",
				"tsconfig.json"
			],
			"output": [
				"dist/**"
			],
			"dependencies": [
				"../core:build",
				"lint"
			]
		},
		"watch": {
			"command": "npm run build --watch",
			"service": true
		},
		"test": {
			"command": "ng test",
			"files": [
				"lib/**"
			],
			"output": [
				"coverage/**"
			],
			"dependencies": [
				"build",
				"lint"
			]
		},
		"lint": {
			"command": "eslint",
			"files": [
				"lib/**"
			],
			"output": []
		}
	},
	"devDependencies": {
		"ng-packagr": "^21.0.0"
	}
}
