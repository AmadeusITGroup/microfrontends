{
	"name": "root",
	"description": "Amadeus Micro Frontend Toolkit",
	"private": true,
	"bugs": "https://github.com/AmadeusITGroup/microfrontends/issues",
	"license": "MIT",
	"engines": {
		"node": "^22.11.0",
		"npm": "^10.9.0"
	},
	"packageManager": "npm@10.9.0",
	"keywords": [
		"micro frontends",
		"mfe",
		"message channel"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AmadeusITGroup/microfrontends.git"
	},
	"type": "module",
	"scripts": {
		"build": "wireit",
		"package": "wireit",
		"demo": "wireit",
		"demo-ssr": "wireit",
		"test": "wireit",
		"lint": "wireit",
		"format": "prettier --check .",
		"ci": "wireit",
		"postinstall": "husky"
	},
	"wireit": {
		"package": {
			"command": "node ./scripts/prepare-packages.js",
			"dependencies": [
				"build:packages"
			]
		},
		"build:packages": {
			"dependencies": [
				"./packages/core:build",
				"./packages/angular:build:prod",
				"./demos/app-angular:build:prod",
				"./demos/app-angular-ssr:build:prod"
			]
		},
		"build": {
			"dependencies": [
				"./packages/core:build",
				"./packages/angular:build",
				"./demos/app-angular:build",
				"./demos/app-angular-ssr:build"
			]
		},
		"demo": {
			"dependencies": [
				"./demos/app-angular:demo"
			]
		},
		"demo-ssr": {
			"dependencies": [
				"./demos/app-angular-ssr:demo"
			]
		},
		"test": {
			"dependencies": [
				"./packages/core:test",
				"./packages/core-e2e:test",
				"./packages/angular:test",
				"./packages/angular-e2e:test"
			]
		},
		"lint": {
			"dependencies": [
				"./packages/core:lint",
				"./packages/core-e2e:lint",
				"./packages/angular:lint",
				"./packages/angular-e2e:lint",
				"./demos/app-angular:lint",
				"./demos/app-angular-ssr:lint"
			]
		},
		"ci": {
			"command": "npm run package",
			"dependencies": [
				"lint",
				"test",
				"format"
			]
		}
	},
	"dependencies": {
		"@angular/common": "^21.0.0",
		"@angular/compiler": "^21.0.0",
		"@angular/core": "^21.0.0",
		"@angular/platform-browser": "^21.0.0",
		"@angular/platform-browser-dynamic": "^21.0.0",
		"@angular/router": "^21.0.0",
		"rxjs": "~7.8.0",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@angular/build": "^21.0.0",
		"@angular/cli": "^21.0.0",
		"@angular/compiler-cli": "^21.0.0",
		"@commitlint/cli": "^19.7.1",
		"@eslint/js": "^9.20.0",
		"@vitest/coverage-v8": "^4.0.14",
		"angular-eslint": "^21.0.0",
		"core-js": "^3.40.0",
		"eslint": "^9.20.1",
		"fs-extra": "^11.3.0",
		"husky": "^9.1.7",
		"jsdom": "^27.2.0",
		"livereload": "^0.9.3",
		"local-web-server": "^5.4.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.5.0",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.2",
		"typescript-eslint": "^8.24.0",
		"vitest": "^4.0.14",
		"wireit": "^0.14.12"
	},
	"workspaces": [
		"packages/*",
		"demos/*"
	]
}
